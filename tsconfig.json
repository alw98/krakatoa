{
	"compilerOptions": {
		"outDir": "dist",
		"lib": [
			"es2020"
		],
		"sourceMap": true,
		"noImplicitAny": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "dist/types"
	},
	"watchOptions": {
		"excludeDirectories": [
			"node_modules",
			"dist"
		]
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	]
}